    <meta property="fb:admins" content="548348576" />
    <meta property="fb:app_id" content="737501859652485" />

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@Lewagonlatam">
    <meta name="twitter:creator" content="@Lewagonlatam">
    <meta name="twitter:image:src" content="assets/meta.png">


    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">

    <script src="https://cdn.tailwindcss.com"></script>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <main>
      <%= yield %>
    </main>
  </body>
